@model List<AdmissionForm>



<div class="card shadow border-0 my-4">
    <div class="py-3 card-header bg-secondary bg-gradient col-12">
        <h2 class="text-white text-center">Student Portal- Admission Form</h2>
    </div>
    <div class="card-body">
        <form method="post">
         <div class="row">
         <div class= "col-2">
             <label>Student Name</label>
         </div>
         <div class="col-4">
             <input class="form-control shadow" />
         </div>
            <div class="col-2">
                <label>Father Name</label>
            </div>
            <div class="col-4">
                <input class="form-control shadow-lg" />
            </div>
            </div>
            <div class="row py-3">
                <div class="col-2">
                    <label>Class</label>
                </div>
                <div class="col-4">
                    <select class="form-select shadow text-center">
                        <option class="text-center" disabled selected>--Select Class--</option>
                        <option>1st Year</option>
                        <option>2nd Year</option>
                        <option>3rd Year</option>
                        <option>4th Year</option>
                    </select>
                </div>
                <div class="col-2">
                    <label>Section</label>
                </div>
                <div class="col-4">
                    <select class="form-select shadow text-center">
                        <option class="text-center" disabled selected>--Select Section--</option>
                        <option>Section-A</option>
                        <option>Section-B</option>
                        <option>Section-C</option>
                        
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    <label>Admission Date</label>
                </div>
                <div class="col-4">
                    <input class="form-control shadow" type="date" />
                </div>
                <div class="col-2">
                    <button id="SubmitForm" type="submit" class="btn btn-outline-success form-control">Submit</button>
                </div>
                <div class="col-2">
                    
                    <button id="CancelForm" type="submit" class="btn btn-outline-warning form-control">Cancel</button>
                </div>
            </div>
        </form>
        <table class="table table-bordered table-striped my-5">
            <thead>
                <tr>
                    <th>Serial No</th>
                    <th> Student Name</th>
                    <th> Father Name</th>
                    <th> Class</th>
                    <th>Section</th>
                    <th>Admission Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.SNo</td>
                        <td> @obj.SName</td>
                        <td>@obj.FName</td>
                        <td>@obj.Class</td>
                        <td>@obj.Section</td>
                        <td>@obj.admissionDate</td>
                        <td> 

                            <button type="submit" id="btnDelete" class="btn btn-danger " >
                                <span class="spinner-grow spinner-grow-sm"></span>
                                Delete
                            </button>
                            <button type="submit" id="btnEdit" class="btn btn-primary " >
                                <span class="spinner-grow spinner-grow-sm"></span>
                                Edit
                            </button>

                        </td>
                    </tr>
                    
                }
              
            </tbody>
        </table>
    </div>
</div>